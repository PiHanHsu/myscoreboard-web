<div class="row">
    <div class="col-md-offset-9 col-md-3">
        <%= link_to '編輯球隊成員', nil, :class => 'btn btn-default' %>
    </div>
</div>
<div class="row">
    <div class="col-md-4 col-xs-12 team_info ">
        <div class="team_logo">
            <%= image_tag(team.logo.url(:thumb)) %>
        </div>
        <div class="team_name">
            <h3>球隊名稱：<%= team.name %></h3>
        </div>
        <div class="team_content">
            <h4>球聚時間：</h4>
            <div class="day">
                <h3><%= team.day %></h3>
            </div>
            <div class="hour">
                <span>
                    <h5><%= "%02d" %team.start_time.hour %></h5>
                    <h5><%= "%02d" %team.end_time.hour %></h5>
                </span>
            </div>
            <div class="team_edit"></div>
        </div>
    </div>

    <div class="col-md-8 col-xs-12 team_list">
        <div class="row">
            <%# .each %>
            <div class="col-md-3 col-xs-2 team_member">
                我是某個成員
            </div>
            <%# end %>
        </div>
    </div>
</div>
