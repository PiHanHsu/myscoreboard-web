<!DOCTYPE html>
<html>
<head>
  <link href='http://product.myscoreboardapp.com/image/myscoreboard.ico' rel='myscoreboard icon'/>
  <title>Myscoreboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav id="navbar" class="navbar navbar-inverse " role="navigation">
        <div class="container">
            <% if flash[:notice].present? %>
              <div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
            <%end%>

            <% if flash[:alert].present? %>
              <div class="alert alert-danger" role="alert"><%= flash[:alert] %></div>
            <%end%>

            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <%#= link_to('My ScoreBoard Fourm', games_path, :class => "navbar-brand") %>
                <span class="navbar-brand"> <%= link_to 'MyScoreBoard', games_path %></span>

             <div class="visible-xs-block">

              <div class="dropdown">
                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                Dropdown
                  <span class="caret"></span>
                </button>

                <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                    <li><a href="#">Action</a></li>
                    <li><a href="#">Another action</a></li>
                    <li><a href="#">Something else here</a></li>
                    <li role="separator" class="divider"></li>
                    <li><a href="#">Separated link</a></li>
                </ul>
              </div>

            </div>

            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                  <% if current_user %>
                    <li><%= link_to('登出', destroy_user_session_path, :method => :delete) %></li>
                    <li><%= link_to('修改個人資訊', edit_registration_path(:user)) %><li>
                  <% else %>
                    <li><%= link_to('註冊', new_registration_path(:user)) %></li>
                    <li><%= link_to('登入', new_session_path(:user)) %></li>

                  <% end %>
                </ul>
                <div>
                  <ul class="nav navbar-nav">
                    <% if current_user %>
                    <li><%= link_to "個人頁面", user_path(current_user),:method => :get%></li>
                    <li><%= link_to "我的球隊", teams_path %></li>
                    <li><%= link_to "排行榜", games_path %></li>
                    <% end %>
                  </ul>
                </div>
            </div>
        </div>
  </nav>





<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '576937715814090',
      xfbml      : true,
      version    : 'v2.6'
    });
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>

<%= yield %>

</body>
</html>
