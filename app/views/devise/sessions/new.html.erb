<div class="container_mobile_first">
<br>
<br>
<%=  image_tag("logo.png") %>
 <h1>我的記分板</h1>
 <h4>創造你的大聯盟</h4>
 <br>
 <br>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to omniauth_authorize_path(resource_name, provider) do%>
     <%=  image_tag("loginfb.png") %><br>
    <% end %>
  <% end -%>
<% end -%>

  <br />
   <span style="text-decoration:underline;">或</span>
  <br />
  <br />

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
   <div class="email_area">
   <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
    <%= f.email_field :email, autofocus: true, placeholder: "信箱", class: "transparent"  %>
   </div>
  </div>
 <br>
  <div class="field">
    <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
    <%= f.password_field :password, autocomplete: "off", placeholder: "密碼", class: "transparent" %>
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "忘記密碼", new_password_path(resource_name) %><br />
  </div>
<% end -%>
<br>

  <div class="actions">
    <%= f.submit "登入", class: "btn btn-success" %>
  </div>
<% end %>

<br>
<br>
<br>
<div class="bottomside"
<div class="createuser">
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    還沒加入我的記分板?<%= link_to "建立帳號", new_registration_path(resource_name) %><br />
  <% end -%>
</div>
</div>
