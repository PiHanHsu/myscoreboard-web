<div class="container">
  <% if @team %>
    <div class="row ">
      <div class="col-sm-1"></div>
      <div class="col-sm-10">
        <div class="nav nav-tabs pull-left">
          <li class="dropdown">
            <a data-toggle="dropdown" class="dropdown-toggle" href="#"><%=@team.name %><b class="caret"></b></a>
            <ul class="dropdown-menu">
              <% @teams.each do |team| %>
                <li><%= link_to team.name, games_path( :team => team ) %></li>
              <% end %>
            </ul>
          </li>
        </div>
        <div class="nav nav-tabs pull-right">
          <li class="<%= 'active' if @game_type == "single" %> game_type"><%= link_to "單打", games_path( :team => @team, game_type: "single") %></li>
          <li class="<%= 'active' if @game_type == "double" %> game_type"><%= link_to "雙打", games_path( :team => @team, game_type: "double") %></li>
          <li class="<%= 'active' if @game_type == "mix" %> game_type"><%= link_to "混雙", games_path( :team => @team, game_type: "mix") %></li>
        </div>
      </div>
      <div class="col-sm-1"></div>
    </div>
    <div class="row">
      <div class="col-sm-1"></div>
        <div class="col-sm-10 ranking-area">
          <div class="col-sm-6">
            <p class="ranking-title"> 男子選手排行榜 </p>
            <table class = "table ranking-table table-striped">
              <thead class = "thead">
                <th> <%= "名次"%></th>
                <th> <%= "球員"%></th>
                <th> <%= "勝"%></th>
                <th> <%= "敗"%></th>
                <th> <%= "勝率(%)"%></th>
              </thead>
              <tbody>
                <% @male_ranking.each_with_index do |player, index| %>
                  <tr id="ranking_tr">
                    <td ><P class="ranking-number"><%= index+1 %></p></td>
                    <td >
                      <span class="pull-left"><%= user_photo_games(player[:user]) %></span>
                      <div class="ranking-user"> <%= player[:user].username %> </div>
                    </td>
                    <td><%= player[:wins] %></td>
                    <td><%= player[:losses] %></td>
                    <td><%= player[:rate] %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <div class="col-sm-6">
            <p class="ranking-title"> 女子選手排行榜 </p>
            <table class = "table ranking-table table-striped">
              <thead class = "thead">
                <th> <%= "名次"%></th>
                <th> <%= "球員"%></th>
                <th> <%= "勝"%></th>
                <th> <%= "敗"%></th>
                <th> <%= "勝率(%)"%></th>
              </thead>
              <tbody>
                <% @female_ranking.each_with_index do |player, index| %>
                  <tr id="ranking_tr">
                    <td ><P class="ranking-number"><%= index+1 %></p></td>
                    <td >
                      <span class="pull-left"><%= user_photo_games(player[:user]) %></span>
                      <div class="ranking-user"> <%= player[:user].username %> </div>
                    </td>
                    <td><%= player[:wins] %></td>
                    <td><%= player[:losses] %></td>
                    <td><%= player[:rate] %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

    </div>
  <% else %>
    <h1> 目前沒有排行榜 </h1>
  <% end %>
</div>
