<div class="container info">
  <% if @team %>
	<h1><%= @team.name %>  排行榜</h1>	  
    <div class="row ">
      <div class="col-sm-1"></div>
      <div class="col-sm-10">
      	<div class="nav nav-tabs pull-left">
			    <li class="dropdown">
             <a data-toggle="dropdown" class="dropdown-toggle" href="#"><%=@team.name %><b class="caret"></b></a>
             <ul class="dropdown-menu">
              <% @teams.each do |team| %>
       			    <li><%= link_to team.name, games_path( :team => team ) %></li>
              <% end %>
            </ul>
          </li>
      	</div>
        <div class="nav nav-tabs pull-right">  
          <li class="<%= 'active' if @game_type == "single" %>"><%= link_to "單打", games_path( :team => @team, game_type: "single") %></li>
          <li class="<%= 'active' if @game_type == "double" %>"><%= link_to "雙打", games_path( :team => @team, game_type: "double") %></li>
          <li class="<%= 'active' if @game_type == "mix" %>"><%= link_to "混雙", games_path( :team => @team, game_type: "mix") %></li>
        </div>
      </div>
    </div>
    <div class="row">
    	<div class="col-sm-1"></div>
        <div class="col-sm-5">
        	<table class = "table">
      			<thead class = "thead">
       				<th> <%= "男子選手排行榜"%></th>
              <th class="empty_th"></th>
              <th> <%= "勝"%></th>
              <th> <%= "敗"%></th>
              <th> <%= "勝率"%></th>
              <th> <%= "積分"%></th>

       				</thead>
       				<tbody> 
               <% @male_ranking.each do |player| %>
      				 <tr id="ranking_tr">
        				<td ><%= image_tag(player[:user].head.url, height: '70', width: '70',:class => "head_image") %></td>
                <td class="ranking_td"><div><%= player[:user].username %></div></td>
                <td><%= player[:wins] %></td>
                <td><%= player[:losses] %></td>
                <td><%= player[:rate] %></td>
                <td><%= player[:points] %></td>
        			 </tr>
               <% end %>
        			</tbody>
       		</table>
        </div>
        <div class="col-sm-5">
       		<table class = "table ">
     			  <thead class = "thead">
       			  <th> <%= "女子選手排行榜"%></th>
              <th class="empty_th"></th>
              <th> <%= "勝"%></th>
              <th> <%= "敗"%></th>
              <th> <%= "勝率"%></th>
              <th> <%= "積分"%></th>
       			</thead>
       			<tbody> 
     				  <% @female_ranking.each do |player| %>
                <tr id="ranking_tr">
                  <td ><%= image_tag(player[:user].head.url, height: '70', width: '70',:class => "head_image") %></td>
                  <td class="ranking_td"><div><%= player[:user].username %></div></td>
                  <td><%= player[:wins] %></td>
                  <td><%= player[:losses] %></td>
                  <td><%= player[:rate] %></td>
                  <td><%= player[:points] %></td>
                </tr>
              <% end %>
        		</tbody>
       		</table>
        </div>
       	<div class="col-sm-1"></div>
    </div>
  <% else %>
  <h1> 目前沒有排行榜 </h1>
  <% end %>
</div>
