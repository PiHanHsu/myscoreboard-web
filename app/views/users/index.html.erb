
 <div class="container info">

<%= form_tag users_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "搜尋" %>
  </p>
<% end %>


<ul>
<% @users.each do |user| %>
  <li>
    <%= user.email %>
    <%= user.username %>
  </li>
<% end %>
</ul>


</div>
