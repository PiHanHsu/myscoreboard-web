      </div>

      <div class="row user_data_6">
      </div>


   </div>


   <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 user_data_right">

       <div class="row powerful">
       <font size="10" class="" >戰力分析</font>
       </div>


<!-- Modal -->
  <div class="modal fade " id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
          <div class="modal-content">
              <div class="modal-header">
              <div class ="row">
                  <button type="button" class="close close_x" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">
                  <i class="fa fa-times fa-4" aria-hidden="true"></i>
                  </span>
                  </button>
                </div>
              <div class="row">
              <%=  image_tag("steven.jpg", height: '240', width: '143', class: "playercard1")%><br>
上傳球員卡:<br>
<div class="head_submit row ">
<!-- 這邊上傳球員卡 -->
      <%= form_for @card, url: user_cards_path(@user), html: { multipart: true } do |form| %>
      <%= form.file_field :avatar %>
      <%= form.submit %>
      <% end %>
  </div><br><br>
<!-- 這邊上傳球員卡 -->

              <%= form_for @user do |f| %>
